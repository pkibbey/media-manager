{
  "name": "media-manager",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@11.7.0",
  "workspaces": [
    "packages/workers/*",
    "packages/web-ui",
    "packages/shared"
  ],
  "scripts": {
    "dev": "turbo run dev --concurrency 12",
    "web": "turbo run web --concurrency 12",
    "build": "turbo run build",
    "workers": "turbo run worker",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "knip": "knip",
    "types": "npx supabase gen types typescript --local > packages/shared/types/supabase-types.ts",
    "save-db-schema": "npx supabase db dump --file supabase/schema.sql --local",
    "save-db-data": "npx supabase db dump --data-only --file supabase/data.sql --local"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "^25.0.6",
    "knip": "^5.80.2",
    "supabase": "^2.72.3",
    "turbo": "^2.7.3"
  }
}